{
  "name": "tax_separation_validation_suite",
  "version": "1.0.0",
  "tests": [
    {
      "id": "tax_rules_exist",
      "type": "file_check",
      "config": {
        "path": "../authority/tax/tax-rules.json"
      },
      "expect": "exists"
    },
    {
      "id": "tax_separation_required",
      "type": "json_field_check",
      "config": {
        "file": "../authority/tax/tax-rules.json",
        "field": "rules.require_separation"
      },
      "expect": true
    },
    {
      "id": "order_of_operations_valid",
      "type": "json_array_check",
      "config": {
        "file": "../authority/tax/tax-rules.json",
        "field": "rules.order_of_operations"
      },
      "expect": [
        "federal",
        "state",
        "organization",
        "individual"
      ]
    }
  ]
}