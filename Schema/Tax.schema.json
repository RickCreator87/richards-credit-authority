{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "TaxRules",
  "type": "object",
  "required": ["jurisdiction", "rules"],
  "properties": {
    "jurisdiction": {
      "type": "object",
      "required": ["country", "scope"],
      "properties": {
        "country": { "type": "string" },
        "scope": { "type": "string" },
        "state": { "type": "string" }
      }
    },
    "rules": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "description", "category"],
        "properties": {
          "id": { "type": "string" },
          "description": { "type": "string" },
          "category": { "type": "string" },
          "references": { "type": "array", "items": { "type": "string" } },
          "required_for": { "type": "array", "items": { "type": "string" } }
        }
      }
    }
  }
}
